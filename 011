<body>

  <h1>Benimle evlenir misin? 💖</h1>
  <button id="yes">Evet</button>
  <button id="no">Hayır</button>

  <div id="finalMessage">🎉 Sadece EVET seçeneği kaldı! Kabul ediyorsun 😍</div>

  <script>
    let noBtn = document.getElementById("no");
    let yesBtn = document.getElementById("yes");
    let clickCount = 0;

    noBtn.onclick = function() {
      clickCount++;
      if (clickCount < 10) {
        // Rastgele pozisyon değiştir
        noBtn.style.position = "absolute";
        noBtn.style.left = Math.random() * (window.innerWidth - 100) + "px";
        noBtn.style.top = Math.random() * (window.innerHeight - 50) + "px";
      } else {
        noBtn.style.display = "none";
        document.getElementById("finalMessage").style.display = "block";
      }
    };

    yesBtn.onclick = function() {
      alert("Yaaa 😍 EVET dedi!! Mutluluğumuz sonsuz olsun 💍💘");
    };
  </script>

</body>
